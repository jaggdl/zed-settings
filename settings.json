// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "copilot": false
  },
  "format_on_save": "off",
  "base_keymap": "VSCode",
  "theme": "Ayu Dark",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "experimental.theme_overrides": {
    "elevated_surface.background": "#000000",
    "surface.background": "#000000",
    "background": "#000000",
    "element.background": "#000000",
    "status_bar.background": "#000000",
    "title_bar.background": "#000000",
    "toolbar.background": "#000000",
    "tab_bar.background": "#000000",
    "tab.inactive_background": "#000000",
    "tab.active_background": "#000000",
    "panel.background": "#000000",
    "scrollbar.track.background": "#000000",
    "editor.background": "#000000",
    "editor.gutter.background": "#000000",
    "search.match_background": "#0565e399",
    "players": [
      {
        "selection": "#0565e388"
      }
    ]
  },
  "vim_mode": false,
  "ui_font_size": 14,
  "ui_font_family": "ProFont",
  "buffer_font_size": 16,
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": false,
    "show_parameter_hints": false,
    "show_other_hints": false
  },
  "show_completions_on_input": false,
  "language_overrides": {
    "C": {
      "format_on_save": "off",
      "preferred_line_length": 64,
      "soft_wrap": "preferred_line_length"
    },
    "Vue.js": {
      "tab_size": 2
    },
    "js": {
      "tab_size": 2
    }
  }
}

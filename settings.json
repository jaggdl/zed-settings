// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "copilot": false
  },
  "format_on_save": "off",
  "base_keymap": "VSCode",
  "theme": "Monokai Charcoal (gray)",
  "experimental.theme_overrides": {
    "editor.document_highlight.read_background": "#444",
    "editor.document_highlight.write_background": "#666",
    "text.muted": "#AAA",
    "search.match_background": "#0565e399",
    "syntax": {
      "comment": {
        "color": "#999"
      },
      "variable": {
        "color": "#FD971F"
      },
      "variable.special": {
        "color": "#FD971F"
      },
      "attribute": {
        "color": "#FD971F"
      }
    },
    "players": [
      {
        "selection": "#0565e388"
      }
    ]
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": false,
  "ui_font_size": 14,
  "ui_font_family": "ProFont",
  "buffer_font_size": 16,
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": false,
    "show_parameter_hints": false,
    "show_other_hints": false
  },
  "show_completions_on_input": false,
  "language_overrides": {
    "C": {
      "format_on_save": "off",
      "preferred_line_length": 64,
      "soft_wrap": "preferred_line_length"
    },
    "Vue.js": {
      "tab_size": 2
    },
    "js": {
      "tab_size": 2
    }
  }
}
